<div class="container">

  <div id="loginbox" class="mainbox col-md-6 col-md-offset-3 col-sm-6 col-sm-offset-3">

    <div class="row">
      <div class="iconmelon">
        <svg viewBox="0 0 32 32">
          <g filter="">
            <use xlink:href="#git"></use>
          </g>
        </svg>
      </div>
    </div>

    <div class="panel panel-default" >
      <div class="panel-heading">
        <div class="panel-title text-center">Gerrslack</div>
      </div>

      <div class="panel-body" >
        <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form-horizontal login-form', id: 'login-form'} ) do |f| %>
          <% if flash[:alert].present? %>
            <div class="login-alert alert alert-danger" role="alert">
              <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
              <span class="sr-only">Error:</span>
              <%= flash[:alert] %>
            </div>
          <% end %>
          <div class="input-group">
            <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
            <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: 'User' %>
          </div>

          <div class="input-group">
            <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
            <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: 'Password' %>
          </div>

          <div class="form-group">
            <!-- Button -->
            <div class="col-sm-12 controls">
              <button id="login-button" type="submit" href="#" class="btn btn-primary pull-right"><i class="glyphicon glyphicon-log-in"></i> Log in</button>
            </div>
          </div>

          <% end %>

      </div>
    </div>
  </div>
</div>