<!DOCTYPE html>
<html>
<head>
  <title>Gerrslack</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<nav class="navbar navbar-inverse navbar-fixed-top">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to('GerrSlack', projects_path, class: 'navbar-brand') %>
    </div>
    <div id="navbar" class="collapse navbar-collapse">
    <ul class="nav navbar-nav">
      <li <%= controller_name == 'projects' ? 'class=active' : '' %>><%= link_to('Project', projects_path) %> </li>
      <li <%= controller_name == 'user_mappings' ? 'class=active' : ''%>><%= link_to('User Mapping', user_mappings_path) %></li>
    </ul>
    <ul class="nav navbar-nav navbar-rightnav navbar-nav navbar-right">
      <li><%= link_to('Logout', destroy_user_session_path, :method => :delete) %></li>
    </ul>
    </div><!--/.nav-collapse -->
  </div>
</nav>
  <div class="container main-container">
    <div class="well row">
      <div class="col-md-offset-1 col-md-10">

<%= yield %>

      </div>
    </div>
  </div>

<%= render partial: 'shared/background' %>

</body>
</html>
