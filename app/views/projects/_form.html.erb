<%= form_for(@project) do |f| %>
  <% if @project.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@project.errors.count, "error") %> prohibited this project from being saved:</h2>

      <ul>
      <% @project.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name %><br>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :channel_name %><br>
    <%= f.text_field :channel_name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label 'Notifications' %>
  </div>

  <div class="row notification-form-section">
    <div class="col-lg-6 col-md-6">
      <% @notification_fields.take(@notification_fields.length/2).each do |notification| %>
        <div class="form-group">
          <%= f.label notification, class: 'notification-label' %>
          <%= notification_options(:project, notification) %>
        </div>
      <% end %>
    </div>
    <div class="col-lg-6 col-md-6">
      <% @notification_fields.drop(@notification_fields.length/2).each do |notification| %>
        <div class="form-group">
          <%= f.label notification, class: 'notification-label' %>
          <%= notification_options(:project, notification) %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="form-group">
    <%= f.submit class: 'btn btn-success' %>
  </div>
<% end %>
